#ifndef HASH_COMP
#define HASH_COMP

layout(binding = 0x100) buffer PerlinTable {
    uint p[512];
};

uint rand(uint octave, int x, int y, int z) {
	uint ux = uint(x) & 255;
	uint uy = uint(y) & 255;
	uint uz = uint(z) & 255;
	uint a = p[uz] + uy;
	uint b = p[a] + ux;
	uint c = p[b] + octave;
	return p[c];
}

#endif